{
  "name": "lcdscreen",
  "version": "1.0.0",
  "description": "a program for showing number to an LCD screen",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --ci --coverage"
  },
  "author": "nasser@sogilis",
  "license": "MIT",
  "dependencies": {
    "commander": "^2.19.0"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0"
  },
  "jest": {
      "coverageReporters": [
        "text",
        "html",
        "json-summary"
      ],
      "coverageDirectory": "coverage",
      "coverageThreshold": {
        "global": {
          "branches": 75,
          "functions": 80,
          "lines": 80,
          "statements": 80
        }
      }
  },
  "jest-junit": {
    "output": "./artifacts/test-results.xml"
  }
}
